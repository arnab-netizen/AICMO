{
  "$schema": "aicmo.section_benchmarks.schema.json",
  "pack_key": "quick_social_basic",
  "strict": true,
  "sections": {
    "overview": {
      "id": "overview",
      "label": "Client Overview",
      "min_words": 120,
      "max_words": 260,
      "min_bullets": 3,
      "max_bullets": 8,
      "min_headings": 1,
      "max_headings": 3,
      "required_headings": [
        "Brand",
        "Industry",
        "Primary Goal"
      ],
      "required_substrings": [
        "Brand:",
        "Industry:",
        "Primary Goal:"
      ],
      "forbidden_substrings": [
        "your business",
        "insert brand name",
        "[Brand]",
        "lorem ipsum",
        "to be provided"
      ],
      "forbidden_regex": [
        "(?i)in today's digital age",
        "(?i)content is king",
        "(?i)as a leading brand"
      ],
      "max_repeated_line_ratio": 0.3,
      "max_avg_sentence_length": 32,
      "format": "markdown_block"
    },
    "detailed_30_day_calendar": {
      "id": "detailed_30_day_calendar",
      "label": "30-Day Social Calendar",
      "min_words": 200,
      "max_words": 1200,
      "min_bullets": 0,
      "max_bullets": 35,
      "min_headings": 1,
      "max_headings": 5,
      "required_headings": [
        "Day",
        "Platform"
      ],
      "required_substrings": [
        "Education",
        "Proof",
        "Promo"
      ],
      "forbidden_substrings": [
        "repeat previous week",
        "same as above",
        "post whatever is trending"
      ],
      "forbidden_regex": [
        "(?i)just wing it"
      ],
      "max_repeated_line_ratio": 0.5,
      "max_avg_sentence_length": 32,
      "format": "markdown_table"
    },
    "messaging_framework": {
      "id": "messaging_framework",
      "label": "Messaging Framework",
      "min_words": 100,
      "max_words": 300,
      "min_bullets": 3,
      "max_bullets": 10,
      "min_headings": 1,
      "max_headings": 3,
      "required_headings": [],
      "required_substrings": [],
      "forbidden_substrings": [
        "none",
        "no messaging"
      ],
      "forbidden_regex": [],
      "max_repeated_line_ratio": 0.3,
      "max_avg_sentence_length": 28,
      "format": "markdown_block"
    },
    "content_buckets": {
      "id": "content_buckets",
      "label": "Content Buckets",
      "min_words": 100,
      "max_words": 280,
      "min_bullets": 4,
      "max_bullets": 10,
      "min_headings": 3,
      "max_headings": 5,
      "required_headings": [
        "Bucket"
      ],
      "required_substrings": [],
      "forbidden_substrings": [
        "random mix"
      ],
      "forbidden_regex": [],
      "max_repeated_line_ratio": 0.3,
      "max_avg_sentence_length": 28,
      "format": "markdown_list"
    },
    "execution_roadmap": {
      "id": "execution_roadmap",
      "label": "Execution Roadmap",
      "min_words": 180,
      "max_words": 400,
      "min_bullets": 8,
      "max_bullets": 20,
      "min_headings": 3,
      "max_headings": 6,
      "required_headings": [
        "Week 1"
      ],
      "required_substrings": [],
      "forbidden_substrings": [
        "just start posting",
        "figure it out"
      ],
      "forbidden_regex": [],
      "max_repeated_line_ratio": 0.4,
      "max_avg_sentence_length": 32,
      "format": "markdown_list"
    },
    "hashtag_strategy": {
      "id": "hashtag_strategy",
      "label": "Hashtag Strategy",
      "min_words": 100,
      "max_words": 300,
      "min_bullets": 5,
      "max_bullets": 35,
      "min_headings": 3,
      "max_headings": 5,
      "required_headings": [
        "Brand Hashtags",
        "Industry Hashtags",
        "Campaign Hashtags",
        "Usage Guidelines"
      ],
      "required_substrings": [],
      "forbidden_substrings": [
        "use random hashtags"
      ],
      "forbidden_regex": [],
      "max_repeated_line_ratio": 0.3,
      "max_avg_sentence_length": 24,
      "format": "markdown_list",
      "min_hashtags_per_category": 3,
      "must_start_with_hash": true
    },

    "kpi_plan_light": {
      "id": "kpi_plan_light",
      "label": "KPI Plan",
      "min_words": 180,
      "max_words": 400,
      "min_bullets": 10,
      "max_bullets": 20,
      "min_headings": 3,
      "max_headings": 6,
      "required_headings": [
        "Reach",
        "Engagement"
      ],
      "required_substrings": [],
      "forbidden_substrings": [
        "can't be measured",
        "measure everything"
      ],
      "forbidden_regex": [],
      "max_repeated_line_ratio": 0.4,
      "max_avg_sentence_length": 32,
      "format": "markdown_list"
    },
    "final_summary": {
      "id": "final_summary",
      "label": "Final Summary",
      "min_words": 100,
      "max_words": 260,
      "min_bullets": 0,
      "max_bullets": 8,
      "min_headings": 0,
      "max_headings": 2,
      "required_headings": [],
      "required_substrings": [],
      "forbidden_substrings": [
        "do social media consistently",
        "post regularly"
      ],
      "forbidden_regex": [],
      "max_repeated_line_ratio": 0.3,
      "max_avg_sentence_length": 26,
      "format": "markdown_block"
    }
  }
}
